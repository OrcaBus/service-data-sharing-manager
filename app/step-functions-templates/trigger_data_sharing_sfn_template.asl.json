{
  "QueryLanguage": "JSONata",
  "StartAt": "Start Packaging",
  "States": {
    "Start Packaging": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Arguments": {
        "FunctionName": "${__start_packaging_lambda_function_arn__}",
        "Payload": "{% $states.input %}"
      },
      "Retry": [
        {
          "ErrorEquals": [
            "Lambda.ServiceException",
            "Lambda.AWSLambdaException",
            "Lambda.SdkClientException",
            "Lambda.TooManyRequestsException"
          ],
          "IntervalSeconds": 1,
          "MaxAttempts": 3,
          "BackoffRate": 2,
          "JitterStrategy": "FULL"
        }
      ],
      "Next": "Send Auto Sharing Completion Event"
    },
    "Send Auto Sharing Completion Event": {
      "Type": "Task",
      "Resource": "arn:aws:states:::events:putEvents",
      "Arguments": {
        "Entries": [
          {
            "Detail": {
              "Message": "Auto sharing workflow finished",
              "packageName": "{% $states.input.packageInput.packageName ? $states.input.packageInput.packageName : $states.input.packageName %}"
            },
            "DetailType": "DataSharingStatus",
            "EventBusName": "default",
            "Source": "data-sharing/automation"
          }
        ]
      },
      "End": true
    }
  }
}
